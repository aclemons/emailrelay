#
# make-qt-enabled.sh
#
# Adds Qt frameworks to a Mac OS X application bundle. Called from 
# make. Silently does nothing on non-Mac systems.
#

if test "`uname`" = "Darwin" -o "$1" = "-f"
then
	if test "$1" = "-f" ; then shift ; fi
	thisdir="`cd \`dirname $0\` && pwd`"
	$thisdir/make-qt-enabled.pl "$@"
fi
exit 0
